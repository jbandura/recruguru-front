<h4 class="text-center text-muted">Login</h4>
<div class="row">
  {{#lf-form class="col-md-4 col-md-push-4 col-md-pull-4" rules=rules onSubmit=(action onSubmit formData) as |v formValid|}}
    {{lf-input
      type="text"
      name="login"
      placeholder="E-mail"
      class="js-login"
      on-update=(action (mut formData.login))
      validate=v
    }}
    {{lf-input
      type="password"
      name="password"
      placeholder="Password"
      class="js-password"
      on-update=(action (mut formData.password))
      validate=v
    }}
    <div class="text-center">
      <button type="submit" class="btn btn-primary" disabled={{not formValid}}>Submit</button>
    </div>
  {{/lf-form}}
</div>
